# syntax=docker/dockerfile:1.7-labs

FROM python:3.13-alpine

LABEL org.opencontainers.image.source=https://github.com/Krzysztoff27/Cherry-VM-Manager
LABEL org.opencontainers.image.description="Cherry API"
LABEL org.opencontainers.image.licenses=CC-BY-NC-ND-4.0

RUN apk add --no-cache --virtual .build-deps \
    gcc \
    musl-dev \
    pkgconfig \
    shadow \
    su-exec\
    && apk add --no-cache --repository=http://dl-cdn.alpinelinux.org/alpine/edge/community \
    libvirt-dev \
    libvirt-libs

WORKDIR /api

COPY ./requirements.txt /api/requirements.txt
RUN pip install --no-cache-dir --upgrade -r /api/requirements.txt

COPY --exclude=./requirements.txt --exclude=./docker ./ /api

# (up until ENTRYPOINT) Required for consistent UID and GID mapping between host and the container which assures correct permissions assignment (eg. for libvirt UNIX sockets)
RUN addgroup -g 1000 CherryWorker && adduser -H -D -u 1000 -G CherryWorker CherryWorker

COPY ./docker-entrypoint.sh /usr/local/bin/docker-entrypoint.sh

RUN chmod +x /usr/local/bin/docker-entrypoint.sh

EXPOSE 8000

ENTRYPOINT [ "/usr/local/bin/docker-entrypoint.sh" ]

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]