<?xml version="1.0" encoding="UTF-8"?>
<policyconfig>
    <action id="com.cvms.container">
        <description>Manage Cherry VM Studio containers</description>
        <message>Authentication is required to manage Cherry VM Studio containers</message>
        <annotate key="org.freedesktop.policykit.exec.path">/opt/cherry-vm-studio/systemd/cherry-containers-start.sh</annotate>
        <annotate key="org.freedesktop.policykit.exec.path">/opt/cherry-vm-studio/systemd/cherry-containers-stop.sh</annotate>
        <defaults>
            <allow_any>no</allow_any>
            <allow_inactive>no</allow_inactive>
            <allow_active>auth_admin</allow_active>
        </defaults>
    </action>
</policyconfig>