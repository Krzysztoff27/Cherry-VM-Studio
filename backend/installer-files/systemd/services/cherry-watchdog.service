[Unit]
Description=Cherry VM Studio Watchdog for Docker containers
After=network.target docker.service cherry-vm-studio.service
Wants=docker.service cherry-vm-studio.service

[Service]
User=CherryWorker
Type=oneshot
ExecStart=/usr/bin/pkexec --disable-internal-agent /opt/cherry-vm-studio/systemd/cherry-watchdog.sh
RemainAfterExit=yes
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target