<domain type='kvm'>
    <name></name>
    <uuid></uuid>
    <memory unit='MiB'>512</memory>
    <vcpu placement='static'>1</vcpu>
    <metadata>
        <vm:info xmlns:vm="http://example.com/virtualization">
            <vm:group></vm:group>
            <vm:groupMemberId></vm:groupMemberId>
        </vm:info>
    </metadata>

    <os>
        <type arch='x86_64' machine='pc-i440fx-2.9'>hvm</type>
        <boot dev='hd'/>
        <boot dev='cdrom'/>
    </os>

    <devices>
        <disk type='file' device='cdrom'>
            <driver name='qemu' type='raw'/>
            <source file='/opt/cherry-vm-manager/libvirt/virtual-machines/tinycore-linux/disk-image/tinycore.iso'/>
            <target dev='hdc' bus='ide'/>
            <readonly/>
        </disk>

        <disk type='file' device='disk'>
          <driver name='qemu' type='raw'/>
          <source file='/opt/cherry-vm-manager/libvirt/virtual-machines/tinycore-linux/disk-image/tinycore.img'/>
          <target dev='vda' bus='virtio'/>
        </disk>
    
        <interface type='network'>
          <source network='default'/>
          <model type='virtio'/>
        </interface>
    
        <graphics type='vnc' port='-1' autoport='yes'>
          <listen type='address' address='0.0.0.0'/>
        </graphics>
    
        <input type='mouse' bus='ps2'/>
        <input type='keyboard' bus='ps2'/>

        <video>
          <model type='vga'/>
        </video>
      </devices>
</domain>